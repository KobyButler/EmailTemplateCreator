{
    "manifest_version": 3,
    "name": "Record360 Email Template Creator",
    "version": "1.0",
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": [
        "storage", 
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
      "*://api.record360.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["popup.html", "popup.js", "lib/xlsx.full.min.js"],
            "matches": ["<all_urls>"]
        }
    ]
  }
  